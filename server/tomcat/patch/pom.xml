<project>
  <parent>
    <groupId>org.exoplatform.cs</groupId>
    <artifactId>cs</artifactId>
    <version>1.3-SNAPSHOT</version>
  </parent> 

  <modelVersion>4.0.0</modelVersion>
  <artifactId>exo.cs.server.tomcat.patch</artifactId>
  <version>${org.exoplatform.cs.version}</version>
  <packaging>jar</packaging>
  <name>eXo Tomcat Server</name>
  <url>http://www.exoplatform.org</url>
  <description>eXo Tomcat Server</description>
  
  <dependencies>
    <dependency>
      <groupId>org.exoplatform.portal</groupId>
      <artifactId>exo.portal.server.tomcat.patch</artifactId>
      <version>${org.exoplatform.portal.version}</version>
      <type>jar</type>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>unpack-dependencies</id>
            <phase>compile</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.outputDirectory}</outputDirectory>
              <excludes>**/EXO-README.txt,**/bin/eXo.sh,**/bin/eXo.bat,**/conf/server.xml,**/Catalina/localhost/rest.xml</excludes>
              <includes>**</includes>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
    <resources>
      <resource>
        <directory>src/main/tomcat</directory>
        <includes><include>**/*</include></includes>
      </resource>
    </resources>
  </build>
</project>
