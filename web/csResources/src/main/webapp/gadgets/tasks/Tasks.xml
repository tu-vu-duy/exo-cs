<?xml version="1.0" encoding="UTF-8" ?>
<Module>
  <ModulePrefs author="eXoPlatform"
		title="Upcoming tasks"
		directory_title="Upcoming tasks"
		title_url="http://www.exoplatform.org"
		description="Tasks list."
		thumbnail="/csResources/gadgets/tasks/skin/thumb.png">
		<Locale messages="/csResources/gadgets/tasks/locale/default.xml" />
		<Locale lang="ar" messages="/csResources/gadgets/tasks/locale/ar.xml" language_direction="rtl"/>
		<Locale lang="fr" messages="/csResources/gadgets/tasks/locale/fr.xml" />
		<Locale lang="vi" messages="/csResources/gadgets/tasks/locale/vi.xml" />
		<Require feature="setprefs"/>
		<Require feature="dynamic-height"/>
	</ModulePrefs>
	<UserPref name="url" display_name="__MSG_baseurl__" datatype="string" value="/calendar" required="true"/>
	<UserPref name="subscribeurl" display_name="__MSG_subscribeurl__" datatype="string" value="/portal/rest/private/cs/calendar/upcoming" required="true"/>
	<UserPref name="limit" display_name="__MSG_limit__" default_value="10" datatype="string"/>  
	<UserPref name="timeformat" display_name="__MSG_format__" default_value="AM/PM" datatype="enum" >
    <EnumValue value="AM/PM" />
    <EnumValue value="24h" />	
  </UserPref>	 
  <Content type="html">
    <![CDATA[
			<script type="text/javascript" src="skin/tasks.js"></script>
      <link rel="stylesheet" href="skin/tasks.css" type="text/css"/>
			<div class="UIGadgetThemes UIYellowThemes">
				<div class="TitGad ClearFix">
					<a href="#demo" class="IconDropDown" id="ShowAll" target="_blank">__MSG_showall__</a>
					<div class="ContTit">__MSG_title__</div>
				</div>
				<div class="GadCont MyTasks" id="ItemContainer">
	        <!--
					<div class="CheckBox">
						<input type="checkbox" name="checkbox" id="abc"></input>
						<label id="abc">09:00<span>Joint PR CS + KS</span></label>
					</div>
	        -->
				</div>
			</div>
    ]]>
  </Content>
</Module>
