<project>
	<description>eXo Collaboration Suite is made of four applications:

    * eXo Address Book: is an integrated address book and contacts manager. It not only handles private and public contacts in your organization but also keep precious information such as address, telephone, fax, etc. Furthermore, we also support VCard format, import/export in order to consolidate your existing contacts into a single place.
    * eXo Calendar: is a personal and shared agenda. It not only helps you schedule your time more quickly and conveniently but also manages your shared and public agendas in the organization efficiently. Moreover, eXo Calendar also facilitates iCal support that helps you easily exchange event/task information with other applications.
    * eXo Mail: is a full featured email client. It is built with a variety of features designed to make your e-mail experience more productive.
    * eXo Chat: is an effective and convenient way to communicate online in real time.
</description>
	<url>http://wiki.exoplatform.org/xwiki/bin/view/CS/</url>

  <parent>
    <groupId>org.exoplatform</groupId>
    <artifactId>parent</artifactId>
    <version>1.1.1</version>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.exoplatform.cs</groupId>
  <artifactId>cs</artifactId>
  <name>eXo Collaboration Suite</name>
  <version>1.3.2-SNAPSHOT</version>
  <packaging>pom</packaging>

  <modules>
    <module>web/csportal</module>
    <module>web/csResources</module>
    <module>web/webservice</module>
    <module>tool/migration</module>
    
    <module>eXoApplication/mail/webapp</module>
    <module>eXoApplication/mail/service</module>
   
    <module>eXoApplication/calendar/webapp</module>
    <module>eXoApplication/calendar/service</module>
    
    <module>eXoApplication/contact/webapp</module>
    <module>eXoApplication/contact/service</module>
    
    <module>eXoApplication/content/webapp</module>
    <module>eXoApplication/content/service</module>
    
    <module>eXoApplication/chat/service</module>
    <module>eXoApplication/chat/webapp</module>
    
    <module>eXoApplication/chatbar/webapp</module>
    
    <module>eXoApplication/organization/client</module>
    <module>eXoApplication/organization/service</module>
    <module>eXoApplication/organization/webapp</module>
    
    <module>server/tomcat/patch</module>
    <module>server/jboss/patch</module>
  </modules>
  <issueManagement>
  	<system>JIRA</system>
  	<url>http://jira.exoplatform.org/browse/CS</url>
  </issueManagement>
  <ciManagement>
  	<system>hudson</system>
  	<url>http://builder.exoplatform.org/hudson/job/cs/</url>
  </ciManagement>
  <scm>
  	<url>http://svn.exoplatform.org/projects/cs/</url>
  </scm>
  <organization>
  	<name>eXo Platform SAS</name>
  	<url>http://www.exoplatform.com</url>
  </organization>

  <build>
    <resources>
      <resource>
        <directory>src/main/java</directory>
        <includes>
          <include>**/*.properties</include>
          <include>**/*.xml</include>
        </includes>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <directory>src/test/java</directory>
        <includes>
          <include>**/*.properties</include>
          <include>**/*.xml</include>
        </includes>
      </testResource>
    </testResources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration> <source>1.5</source><target>1.5</target><optimize>true</optimize></configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <version>2.0.2</version>
        <configuration>
          <archiveClasses>false</archiveClasses>
          <warSourceExcludes>WEB-INF/lib/*.jar</warSourceExcludes>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <skip>${test.skip}</skip>
          <useFile>false</useFile>
          <forkMode>pertest</forkMode><!--once , pertest -->
          <testFailureIgnore>false</testFailureIgnore>
          <includes>
            <include implementation="java.lang.String">**/${test.classes}*.java</include>
          </includes>
          <systemProperties>
            <property>
              <name>mock.portal.dir</name>
              <value>${exo.projects.directory.src}/portal/tags/2.5.5/web/portal/src/main/webapp</value>
            </property>
          </systemProperties>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>compile</id>
            <phase>compile</phase>
            <configuration>
              <tasks>
                <copy failonerror="false" todir="${basedir}/target/${project.build.finalName}/WEB-INF/classes">
                  <fileset dir="${basedir}/src/main/webapp/WEB-INF/classes">
                    <include name="**/*_en.properties"/>
                  </fileset>
                  <globmapper from="*_en.properties" to="*.properties"/>
                </copy>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>default</id>  
      <activation>
        <property><name>default</name></property>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <org.exoplatform.kernel.version>2.0.7</org.exoplatform.kernel.version>
        <org.exoplatform.core.version>2.1.5</org.exoplatform.core.version>
	    <org.exoplatform.ws.version>1.3.3</org.exoplatform.ws.version>
        <org.exoplatform.jcr.version>1.10.4</org.exoplatform.jcr.version>
        <org.exoplatform.pc.version>2.0.7</org.exoplatform.pc.version>
        <org.exoplatform.portal.version>2.5.5</org.exoplatform.portal.version>
        <org.exoplatform.cs.version>1.3.2-SNAPSHOT</org.exoplatform.cs.version>
        <test.classes>Test</test.classes>
        <test.skip>true</test.skip>
      </properties>
    </profile>
  </profiles>
</project>
