	<div class="UIAddPollForm">
		<% uiform.begin() %>
			<div class="HorizontalLayout">
				<div class="UIFormInputSet">
					<table class="UIFormGrid">
						<tbody>
							<tr>
		            <td class="FieldLabel"><%=uicomponent.getLabel("Question")%>:</td>
		            <td class="FieldComponent" style="width: 400px;" >
		            	<div class="QuestionInput">
		              <% uiform.renderChild("Question") %>
		              </div>
		            </td>
							</tr>
						</tbody>
					</table>
					<div class="Title"><%=_ctx.appRes("UIPollForm.label.LimitOption"); %>:</div>
					<div class="Line"><span></span></div>
						<div class="PollOptionConntent">
							<table class="UIFormGrid">
								<tbody>
									<tr>
										<td class="FieldLabel"><%=uicomponent.getLabel("Option")%>:</td>
				            <td class="FieldComponent" >
				              <% uiform.renderChild("Option") %>
				            </td>
									</tr>
								</tbody>
							</table>
						</div>
					<div class="Line"><span></span></div>
					<table class="UIFormGrid">
						<tbody>
							<tr>
								<td class="FieldLabel"><%=uicomponent.getLabel("TimeOut")%>:</td>
								<td class="FieldComponent" style="width: 60px;">
									<div class="TimeOutInput">
		              	<% uiform.renderChild("TimeOut") %>
		              </div>
								</td>
								<td class="Label"><%=_ctx.appRes("UIPollForm.label.DayFromNow"); %></td>
							</tr>
							<tr>
								<td class="FieldLabel"><%=uicomponent.getLabel("MultiVote")%>:</td>
								<td class="FieldComponent">
		              <% uiform.renderChild("MultiVote") %>
								</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		
		<div class="UIAction"> 
		  <table class="ActionContainer" align="center">
				<tr>
					<td align="center">
	        <% for(action in uicomponent.getActions()) { 
	        	 String actionLabel = _ctx.appRes(uicomponent.getName() + ".action." + action); 
	           String link = uicomponent.event(action) ;
	           actionLabel.trim();
	        %>
        		<a href="$link" class="ActionButton LightBlueStyle">
	      	  	<div class="ButtonLeft">
	        	  	<div class="ButtonRight">
	          	  	<div class="ButtonMiddle">$actionLabel</div>
	            	</div>
	          	</div>
	        	</a>
          <%}%>
          </td>
				</tr>
	 	  </table> 
    </div>
		<%uiform.end()%>
	</div>